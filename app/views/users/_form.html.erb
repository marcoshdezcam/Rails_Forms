<%
=begin %>
 <form action="user_path" method="POST" accept-charset="utf-8">
   <label for=user[username]>Username:</label>
   <input type="text" id="username" name="user[username]"><br><br>
   <label for="email">Email:</label>
   <input type="text" id="email" name="user[email]"><br><br>
   <label for="password">Password:</label>
   <input type="password" id="password" name="user[password]"><br><br>
   <input type="submit" value="Submit">
   <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
 </form>

<%= form_tag("/users", method: "post") do %>
  <%= label_tag(:username, "username:") %>
  <%= text_field_tag(:username) %><br><br>
  <%= label_tag(:email, "email:") %>
  <%= email_field(:user, :email) %><br><br>
  <%= label_tag(:password, "password:") %>
  <%= password_field_tag(:password) %><br><br>
  <%= submit_tag("submit") %>
<% end %>
<%
=end %>

<%= form_for @user do |f| %>
    <%= show_errors(@user) %>
<div>
    <div>
    <%= f.label :your_username_here %><br>
        <%= f.text_field :username, value: "che & marcos" %>
    </div>
    <div>
    <%= f.label :your_email_here %> <br>
        <%= f.email_field :email, placeholder: "example@example.com" %>
    </div>
    <div>
    <%= f.label :your_password_here %> <br>
        <%= f.password_field :password %>
    </div>
    <%= f.submit "Create" %>
</div>
<% end %>
